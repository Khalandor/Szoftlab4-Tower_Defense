<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="build">
	<path id="build.classpath">
		<pathelement location="classes"/>
	</path>
	<target name="init">
		<mkdir dir="classes"/>
	</target>
	<target name="clean">
		<delete dir="classes"/>
	</target>
	<target depends="init" name="build">
		<javac srcdir="." destdir="classes" source="1.5" target="1.5" fork="yes">
			<classpath refid="build.classpath"/>
			<include name="Mana.java"/>
			<include name="Geometry.java"/>
			<include name="MagicGem.java"/>
			<include name="Barricade.java"/>
			<include name="Construct.java"/>
			<include name="FieldTile.java"/>
			<include name="EndTile.java"/>
			<include name="Tile.java"/>
			<include name="ConstructManager.java"/>
			<include name="Updater.java"/>
			<include name="EnemyGenerator.java"/>
			<include name="PathGenerator.java"/>
			<include name="PathTile.java"/>
			<include name="Hobbit.java"/>
			<include name="Elf.java"/>
			<include name="Dwarf.java"/>
			<include name="Human.java"/>
			<include name="Enemy.java"/>
			<include name="Tower.java"/>
		</javac>
	</target>
</project>